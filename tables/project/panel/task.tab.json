{
  "name": "::Tasks",
  "action": {
    "bind": {
      "model": "task",
      "option": {
        "withs": { "step": {}, "milestone": {}, "manager": {} }
      }
    }
  },
  "layout": {
    "primary": "id",
    "header": { "preset": {}, "actions": [] },
    "filter": { "columns": [], "actions": [] },
    "table": {
      "props": {},
      "columns": [
        { "name": "任务", "width": 300 },
        { "name": "::Plan Starting", "width": 100 },
        { "name": "::Plan End", "width": 100 },
        { "name": "::Task Starting", "width": 100 },
        { "name": "::Task End", "width": 100 },
        { "name": "::Status", "width": 100 }
      ],
      "operation": {
        "fold": false,
        "width": 50,
        "actions": [
          {
            "title": "完成",
            "icon": "icon-check",
            "action": {
              "Table.save": { "id": ":id", "status": "cured" }
            },
            "style": "success",
            "confirm": { "title": "提示", "desc": "确认变更为完成状态？" }
          },
          {
            "title": "编辑任务",
            "icon": "icon-settings",
            "action": {
              "Common.openModal": {
                "width": 1000,
                "Form": { "type": "edit", "model": "task" }
              }
            }
          }
        ]
      }
    }
  },
  "fields": {
    "table": {
      "任务": {
        "bind": "name",
        "view": { "props": { "title": "milestone.name" }, "type": "Tooltip" }
      },
      "::Status": {
        "bind": "status",
        "edit": {
          "props": {
            "options": [
              { "label": "未开始", "value": "waiting" },
              { "label": "进行中", "value": "doing" },
              { "label": "已完成", "value": "done" }
            ],
            "placeholder": "请选择状态"
          },
          "type": "Select"
        },
        "view": { "props": {}, "type": "Text" }
      }
    }
  }
}
