    "milestone": {
      "type": "hasOne",
      "model": "project.milestone",
      "key": "id",
      "foreign": "milestone_id",
      "query": { "select": ["id", "name"] }
    },
    "manager": {
      "type": "hasOne",
      "model": "task.member",
      "key": "task_id",
      "foreign": "id",
      "query": {
        "select": ["id", "staff_id"],
        "wheres": [{ "column": "is_manager", "value": 1 }]
      }
    }
